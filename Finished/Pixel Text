var pixelText = function(text, x, y, size) {
    var pixelGrid = "";
    var newlineCount = 0;
    var pixelTextX = x;
    var data = {
        "A": "01110100011000110001111111000110001",
        "B": "11110100011000111110100011000111110",
        "C": "01111100001000010000100001000001111",
        "D": "11110100011000110001100011000111110",
        "E": "11111100001000011111100001000011111",
        "F": "11111100001000011111100001000010000",
        "G": "01111100001000010011100011000101111",
        "H": "10001100011000111111100011000110001",
        "I": "1111111",
        "J": "00001000010000100001000010000111110",
        "K": "10001100101010011000101001001010001",
        "L": "10000100001000010000100001000011111",
        "M": "10001110111010110001100011000110001",
        "N": "10001110011010110011100011000110001",
        "O": "01110100011000110001100011000101110",
        "P": "11110100011000110001111101000010000",
        "Q": "011100100010100010100010100010100010011100000011",
        "R": "11110100011000110001111101000110001",
        "S": "01111100001000001110000010000111110",
        "T": "11111001000010000100001000010000100",
        "U": "10001100011000110001100011000101110",
        "V": "10001100011000110001100010101000100",
        "W": "10001100011000110001101011101110001",
        "X": "10001100010101000100010101000110001",
        "Y": "10001100011000101110001000010000100",
        "Z": "11111000010001000100010001000011111",
        "a": "0000000001100001011110010111",
        "b": "1000100011101001100110011110",
        "c": "0000000001111000100010000111",
        "d": "0001000101111001100110010111",
        "e": "0000000001101001111110000111",
        "f": "0011010011110100010001000100",
        "g": "00000000011110011001011100011110",
        "h": "1000100011101001100110011001",
        "i": "1011111",
        "j": "001000001001001001110",
        "k": "1000100010011010110010101001",
        "l": "1111111",
        "m": "00000000001101010101101011010110001",
        "n": "0000000011101001100110011001",
        "o": "0000000001101001100110010110",
        "p": "00000000111010011001100111101000",
        "q": "00000000011110011001100101110001",
        "r": "0000000010111100100010001000",
        "s": "0000000001111000011000011110",
        "t": "0100010011110100010001000011",
        "u": "0000000010011001100110010111",
        "v": "00000000001000110001100010101000100",
        "w": "00000000001000110101101011010101010",
        "x": "00000000001000101010001000101010001",
        "y": "000000001001100110011001011100011110",
        "z": "00000000001111100010001000100011111",
        "0": "01110100011001110101110011000101110",
        "1": "11010101010101",
        "2": "11110000010000101110100001000011111",
        "3": "11110000010000111110000010000111110",
        "4": "00011001010100110001111110000100001",
        "5": "11111100001000011110000010000111110",
        "6": "01110100001000011110100011000101110",
        "7": "11111000010001000010001000010000100",
        "8": "01110100011000101110100011000101110",
        "9": "01110100011000101111000010000101110",
        ".": "00000000001111",
        ",": "0000000000010110",
        "'": "0101100000000000",
        "!": "1111101",
        ":": "0001001",
        "?": "1110000100010010010000000100",
        "&": "00000010001010001000101011001001101",
        "©": "01111101000001100110110100011010001100110110000010111110",
        " ": " "
    };
    
    for(var m = 0; m < text.length; m++) {
        if(text[m] !== "\n") {
            pixelGrid = data[text[m]];
            if(text[m] === "©") {
                pixelGrid = pixelGrid.match(/.{1,7}/g);
            } else if(text[m] === "Q") {
                pixelGrid = pixelGrid.match(/.{1,6}/g);
            } else if(text[m] === "I" || text[m] === "i" || text[m] === "l" || text[m] === "!" || text[m] === ":") {
                pixelGrid = pixelGrid.match(/.{1,1}/g);
            } else if(text[m] === "j") {
                pixelGrid = pixelGrid.match(/.{1,3}/g);
            } else if(text[m] === "1" || text[m] === "." || text[m] === "," || text[m] === "'") {
                pixelGrid = pixelGrid.match(/.{1,2}/g);
            } else if(text[m] === text[m].toUpperCase() && text[m] !== "?" || text[m] === "m" || text[m] === "v" || text[m] === "w" || text[m] === "x" || text[m] === "z") {
                pixelGrid = pixelGrid.match(/.{1,5}/g);
            } else {
                pixelGrid = pixelGrid.match(/.{1,4}/g);
            }
            for(var i = 0; i < pixelGrid.length; i++) {
                for(var j = 0; j < pixelGrid[i].length; j++) {
                    if(pixelGrid[i][j] === "1") {
                        rect(x + (j * size / 10) + pixelTextX, y + i * size / 10 + (newlineCount * (size / 10 * 9)), size / 10, size / 10);
                    }
                }
            }
            if(text[m] === "©") {
                pixelTextX += (size / 10 * 8);
            } else if(text[m] === "Q") {
                pixelTextX += (size / 10 * 7);
            } else if(text[m] === "I" || text[m] === "i" || text[m] === "l" || text[m] === "!" || text[m] === ":") {
                pixelTextX += (size / 10 * 2);
            } else if(text[m] === "j" || text[m] === "," || text[m] === "'") {
                pixelTextX += (size / 10 * 4);
            } else if(text[m] === "1" || text[m] === ".") {
                pixelTextX += (size / 10 * 3);
            } else if(text[m] === text[m].toUpperCase() && text[m] !== "1" && text[m] !== "?" || text[m] === "m" || text[m] === "v" || text[m] === "w" || text[m] === "x" || text[m] === "z") {
                pixelTextX += (size / 10 * 6);
            } else {
                pixelTextX += (size / 10 * 5);
            }
        } else {
            newlineCount++;
            pixelTextX = x;
        }
    }
};
